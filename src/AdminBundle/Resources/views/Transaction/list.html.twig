{#{% extends 'AdminBundle::layout.html.twig' %}#}
{% extends '@Admin/layout.html.twig' %}

{% block screen_content %}
<p>
    <a class="btn btn-secondary" href="{{ path('transaction_screen_1') }}" role="button">Ecran 1</a>
    <a class="btn btn-secondary" href="{{ path('transaction_screen_2') }}" role="button">Ecran 2</a>
</p>
{% endblock %}

{% block main_content %}

    <table id="example" class="table table-striped table-bordered dt-responsive nowrap" style="width:100%">
        <thead>
        <tr>
            <th>Titre</th>
            <th>Description</th>
            <th>Montant</th>
            <th>Catégorie</th>
            <th>In/Out</th>
            <th>Date création</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        {% for transaction in data %}
            <tr>
                <td>{{ transaction.title }}</td>
                <td>{{ transaction.description }}</td>
                <td>{{ transaction.amount }}</td>
                <td>{% if transaction.category %}{{ transaction.category.title }}{% else %}--{% endif %}</td>
                <td>{% if transaction.isInput %}IN{% else %}OUT{% endif %}</td>
                <td>{{ transaction.createdAt|date("d/m/Y") }}</td>
                <td> -- </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <script>
        $(document).ready(function() {
            $('#example').DataTable( {
                language: {
                    url: "https://cdn.datatables.net/plug-ins/1.10.16/i18n/French.json"
                },
            } );
        } );
    </script>

{% endblock %}
