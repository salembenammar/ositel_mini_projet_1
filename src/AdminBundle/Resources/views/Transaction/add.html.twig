{% extends '@Admin/layout.html.twig' %}

{% block screen_content %}
<p>
    <a class="btn btn-secondary" href="{{ path('transaction_screen_1') }}" role="button">Ecran 1</a>
    <a class="btn btn-secondary" href="{{ path('transaction_screen_2') }}" role="button">Ecran 2</a>
</p>
{% endblock %}

{% block main_content %}
    {{ form_start(form, {'method': 'post', 'attr': {'class': ''}}) }}
    <div>
        <div class="row">
            <div class="col">
                <div class="form-group">
                    {{ form_label(form.title) }} <br/>
                    {{ form_widget(form.title, {'attr': {'class':'form-control'}}) }}
                    {{ form_errors(form.title) }}
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    {{ form_label(form.amount) }}<br/>
                    {{ form_widget(form.amount, {'type':'number','attr': {'class':'form-control'}}) }}
                    {{ form_errors(form.amount) }}
                </div>
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.description) }}<br/>
            {{ form_widget(form.description, {'attr': {'class':'form-control'}}) }}
            {{ form_errors(form.description) }}
        </div>

        <div class="row">
            <div class="col">
                <div class="form-group">
                    {{ form_label(form.category) }}<br/>
                    {{ form_widget(form.category, {'attr': {'class':'form-control'}}) }}
                    {{ form_errors(form.category) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.isInput) }}
                    {{ form_widget(form.isInput) }}
                    {{ form_errors(form.isInput) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.isValid) }}
                    {{ form_widget(form.isValid) }}
                    {{ form_errors(form.isValid) }}
                </div>

            </div>
            <div class="col">
                <div class="form-group">
                    {{ form_label(form.tag) }}<br/>
                    {{ form_widget(form.tag, {'attr': {'class':'form-control'}}) }}
                    {{ form_errors(form.tag) }}
                </div>
            </div>
        </div>

    </div>

    <button type="submit" class="btn btn-secondary float-right">Ajouter</button>
    <a class="btn btn-link float-right" href="{{ path('transaction_screen_1') }}" role="button">Retour</a>

    {{ form_end(form) }}
{% endblock %}
